<UserControl x:Class="Yourock.UserControls.UCAlbum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yourock.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="710" Height="570">
    <ScrollViewer x:Name="AlbumCards" VerticalScrollBarVisibility="Auto" VerticalAlignment="Stretch" Padding="0,10">
        <WrapPanel x:Name="CardList" Margin="0">
            <Canvas x:Name="cvHeader" Height="100" Width="670" Margin="10,0,0,0">
                <Image x:Name="image" Height="100" Width="680" Source="/Yourock;component/images/album_header.jpg" Stretch="Fill"/>
                <TextBlock x:Name="textBlock" Height="25" TextWrapping="Wrap" Canvas.Top="63" Width="595" FontFamily="Myriad Pro Light" FontSize="24" Foreground="White" Text="World's best guitar players" Canvas.Left="10"/>
            </Canvas>
        </WrapPanel>
    </ScrollViewer>
</UserControl>
